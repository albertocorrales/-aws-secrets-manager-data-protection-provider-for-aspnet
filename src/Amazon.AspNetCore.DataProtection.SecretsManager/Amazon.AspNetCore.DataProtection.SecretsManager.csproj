<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net6.0</TargetFrameworks>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <Description>AWS Secrets Manager ASP.NET Core Data Protection Provider library allows you to use AWS Secrets Manager to store keys generated by ASP.NET's Data Protection API.</Description>
    <AssemblyTitle>Amazon.AspNetCore.DataProtection.SecretsManager</AssemblyTitle>
    <AssemblyName>Amazon.AspNetCore.DataProtection.SecretsManager</AssemblyName>
    <PackageId>Amazon.AspNetCore.DataProtection.SecretsManager</PackageId>
    <PackageTags>AWS;Amazon;SecretsManager</PackageTags>
    <Title>AWS Secrets Manager ASP.NET Core Data Protection Provider</Title>
    <Product>Amazon.AspNetCore.DataProtection.SecretsManager</Product>
    <Authors>Alberto Corrales</Authors>
    <Copyright>2018-2022</Copyright>
    <PackageTags>AWS;Amazon;SecretsManager;Systems Manager</PackageTags>
    <PackageProjectUrl>https://github.com/aws/aws-SecretsManager-data-protection-provider-for-aspnet</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/aws/aws-SecretsManager-data-protection-provider-for-aspnet</RepositoryUrl>
    <Company>Alberto Corrales</Company>
    <SignAssembly>true</SignAssembly>
    <SignOnBuild>true</SignOnBuild>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.Extensions.NETCore.Setup" Version="3.7.2" />
    <PackageReference Include="Microsoft.AspNetCore.DataProtection.Extensions" Version="3.1.28" />
	 <PackageReference Include="AWSSDK.SecretsManager" Version="3.7.2.74" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NetCore.Analyzers" Version="3.3.2">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeQuality.Analyzers" Version="3.3.2">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

</Project>
